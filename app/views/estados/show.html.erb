
<div class="show-id"> <%= @estado.estado %> </div>

<div class="procesador">

  <% if @estado.e_acumulador %>
    <div class="componente acumulador encendido">
      <h5> Register_A | <%= @estado.acumulador %></h5>
    </div>
  <% else %>
    <div class="componente acumulador">
      <h5> Register_A | <%= @estado.acumulador %></h5>
    </div>
  <%end%>


  <% if @estado.e_IR %>
    <div class="componente IR encendido">
      <h5> IR | <%= @estado.IR %></h5>
    </div>
  <% else %>
    <div class="componente IR">
      <h5> IR | <%= @estado.IR %></h5>
    </div>
  <% end %>


  <% if @estado.e_PC %>
    <div class="componente PC encendido">
      <h5> PC | <%= @estado.PC %></h5>
    </div>
  <% else %>
    <div class="componente PC">
      <h5> PC | <%= @estado.PC %></h5>
    </div>
  <% end %>


  <% if @estado.e_MAR %>
    <div class="componente MAR encendido">
      <h5> MAR | <%= @estado.MAR %></h5>
    </div>
  <% else %>
    <div class="componente MAR">
      <h5> MAR | <%= @estado.MAR %></h5>
    </div>
  <% end %>


  <% if @estado.e_decode %>
    <div class="componente decode encendido">
      <% if @sig == nil %>
        <h5> Decode | Halt </h5>
      <% elsif @estado.decode == "Decode" %>
        <h5> Decode </h5>
      <% else %>
        <h5> Decode <%= @estado.decode %></h5>
      <%end %>
    </div>
  <% else %>
    <div class="componente decode">
      <h5> Decode | <%= @estado.decode %></h5>
    </div>
  <% end %>

  <% if @estado.e_alu %>
    <div class="ALU alu-on">
    </div>
    <div class="alu-text">
    <h5> ALU </h5>
    </div>
  <% else %>
    <div class="ALU">
    </div>
    <div class="alu-text">
    <h5> ALU </h5>
    </div>
  <% end %>



  <div class="l-memoriain"></div>
  <div class="interseccion"></div>

  <div class="l-memoriain-acumulador"></div>
  <div class="l-memoriain-ir"></div>
  <div class="l-memoriain-alu"></div>

  <div class="l-acumulador-registerout"></div>
  <div class="l-acumulador-alu"></div>

  <div class="l-ir-decode"></div>
  <div class="l-ir-pc"></div>
  <div class="l-ir-mar"></div>

  <div class="l-pc-mar"></div>

  <div class="l-mar-addressout"></div>

  <div class="l-alu-acumulador"></div>



  <% case @estado.estado %>
    <% when 0 %>

    <% when 1 %>
      <div class="l-memoriain l-on"></div>
      <div class="interseccion on"></div>
      <div class="l-memoriain-ir l-on"></div>
    <% when 2 %>
      <div class="l-ir-mar l-on"></div>
      <div class="l-ir-decode l-on"></div>
      <div class="l-mar-addressout l-on"></div>
    <% when 3, 7, 8 %>
      <div class="l-memoriain l-on"></div>
      <div class="interseccion on"></div>
      <div class="l-memoriain-alu l-on"></div>
      <div class="l-alu-acumulador l-on"></div>
      <div class="l-acumulador-alu l-on"></div>
      <div class="l-pc-mar l-on"></div>
      <div class="l-mar-addressout l-on"></div>
    <% when 4 %>
      <div class="l-pc-mar l-on"></div>
      <div class="l-acumulador-registerout l-on"></div>
      <div class="l-mar-addressout l-on"></div>
    <% when 5 %>
      <div class="l-memoriain l-on"></div>
      <div class="interseccion on"></div>
      <div class="l-memoriain-acumulador l-on"></div>
      <div class="l-pc-mar l-on"></div>
      <div class="l-mar-addressout l-on"></div>
    <% when 6 %>
      <div class="l-ir-mar l-on"></div>
      <div class="l-ir-pc l-on"></div>
      <div class="l-mar-addressout l-on"></div>
    <% when 9 %>

    <% when 10 %>
      <% if @estado.acumulador == 0 %>
        <div class="l-ir-pc l-on"></div>
        <div class="l-ir-mar l-on"></div>
        <div class="l-mar-addressout l-on"></div>
      <% else %>
        <div class="l-pc-mar l-on"></div>
        <div class="l-mar-addressout l-on"></div>
      <% end %>
  <% end %>



  <div class="memoriain">
    <h5> Memory_in</h5>
  </div>

  <div class="registerout">
    <h5> Register_out </h5>
  </div>

  <div class="addresout">
    <h5> Address_out </h5>
  </div>


  <% if @estado.estado == 4 && @ant.estado != 4 %>
  <div class="write-signal">
    <h5> Write_signal (we)</h5>
  </div>
  <% else %>
  <div class="write-signal off">
    <h5> Write_signal (we)</h5>
  </div>
  <% end %>

</div>

<%= render 'index' %>
